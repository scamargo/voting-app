<div class="container-fluid">
    <p class='page-title'>{{poll.question}}</p>
    <div id='pollObject' value='{{ poll._id }}'></div>
    
    <br><br>
    <a target='_blank' href="//www.reddit.com/submit" onclick="window.location = '//www.reddit.com/submit?url=' + encodeURIComponent(window.location) + '&title={{poll.question}}'; return false">Share on Reddit</a>
    {{#if username}}
    {{#unless userVoteCount }}
    <div id='voting-options'>
        {{#each poll.optionsInPoll}}
            <input type="radio" name="option" value='?pollId={{ ../poll._id }}&pollOptionId={{ this._id }}'>{{this.text}}<br>
        {{/each}}
        <input type="radio" name="option" value='?pollId={{ poll._id }}'>Other <input type="text" id="otherOption" /><br>
        <button id='submitVote'>Submit Vote</button>
    </div>
    {{/unless}}
    {{/if}}
    
    <div class="row">
        <div id="chartdiv" class='offset-0 col-11 offset-md-2 col-md-8' style="height: 400px;"></div>
    </div>
</div>
